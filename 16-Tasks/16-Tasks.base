views:
  - type: table
    name: Table
    filters:
      and:
        - file.inFolder("16-Tasks")
        - file.ext != "base"
    order:
      - file.name
      - status
      - priority
      - action_date
    columnSize:
      file.name: 168
      note.status: 100
      note.priority: 100
      note.action_date: 127
